@page
@model LoginModel

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <title>MEP - Iniciar sesión</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <!-- Bootstrap (el mismo que usa tu proyecto) -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />

    <style>
        body {
            background-color: #f4f6f9;
            font-family: system-ui, -apple-system, "Segoe UI", sans-serif;
        }

        /* BARRA SUPERIOR MEP */
        .mep-navbar {
            background-color: #004b8d;
            color: #ffffff;
            min-height: 56px;
        }

        .mep-brand-title {
            font-size: 0.95rem;
            font-weight: 600;
        }

        .mep-brand-subtitle {
            font-size: 0.8rem;
            opacity: 0.85;
        }

        .mep-nav-link {
            font-size: 0.85rem;
            color: #e5effa !important;
            margin-left: 1rem;
        }

        .mep-nav-link:hover {
            text-decoration: underline;
        }

        /* TARJETA LOGIN */
        .mep-login-wrapper {
            min-height: calc(100vh - 56px);
        }

        .mep-login-card {
            max-width: 420px;
            width: 100%;
        }

        .mep-login-card .card {
            border: none;
            border-radius: 0.75rem;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.08);
        }

        .mep-login-title {
            font-size: 1.3rem;
            font-weight: 600;
        }

        .mep-login-subtitle {
            font-size: 0.9rem;
            color: #6c757d;
        }

        .mep-btn-primary {
            background-color: #0056a6;
            border-color: #0056a6;
        }

        .mep-btn-primary:hover {
            background-color: #00427f;
            border-color: #00427f;
        }

        .mep-footer-text {
            font-size: 0.8rem;
            color: #6c757d;
        }
    </style>
</head>
<body>
    <!-- HEADER MEP -->
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark mep-navbar px-3">
            <div class="container-fluid">
                <!-- Logo + texto -->
                <div class="d-flex align-items-center">
                    <div class="me-2">
                        <!-- Si luego tienes un logo real, cámbialo aquí -->
                        <span class="badge bg-light text-primary fw-bold">MEP</span>
                    </div>
                    <div class="d-flex flex-column">
                        <span class="mep-brand-title">MEP - Matrículas y Educación Pública</span>
                        <span class="mep-brand-subtitle">Sistema de agendamiento para tutores y padres de familia</span>
                    </div>
                </div>

                <!-- Enlaces a la derecha -->
                <div class="d-none d-md-flex align-items-center">
                    <a class="mep-nav-link" href="#">Preguntas frecuentes</a>
                    <a class="mep-nav-link" href="#">Ayuda</a>
                    <a class="mep-nav-link" href="#">Contáctanos</a>
                </div>
            </div>
        </nav>
    </header>

    <!-- CONTENIDO LOGIN -->
    <main class="container d-flex justify-content-center align-items-center mep-login-wrapper">
        <div class="mep-login-card">
            <div class="card bg-white">
                <div class="card-body p-4 p-md-5">
                    <h1 class="mep-login-title mb-1 text-center">Iniciar sesión</h1>
                    <p class="mep-login-subtitle mb-4 text-center">
                        Ingresa con tu correo electrónico para gestionar tus citas escolares.
                    </p>

                    <!-- Resumen de validaciones -->
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>

                    <form id="account" method="post">
                        <!-- Correo -->
                        <div class="mb-3">
                            <label asp-for="Input.Email" class="form-label">Correo electrónico</label>
                            <input asp-for="Input.Email"
                                   class="form-control"
                                   autocomplete="username"
                                   aria-required="true"
                                   placeholder="ejemplo@correo.com" />
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>

                        <!-- Password -->
                        <div class="mb-3">
                            <label asp-for="Input.Password" class="form-label">Contraseña</label>
                            <input asp-for="Input.Password"
                                   class="form-control"
                                   autocomplete="current-password"
                                   aria-required="true"
                                   placeholder="Ingrese su contraseña" />
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>

                        <!-- Recordarme -->
                        <div class="form-check mb-3">
                            <input class="form-check-input" asp-for="Input.RememberMe" />
                            <label class="form-check-label" asp-for="Input.RememberMe">
                                Recuérdame en este equipo
                            </label>
                        </div>

                        <!-- Botón principal -->
                        <div class="d-grid mb-3">
                            <button id="login-submit" type="submit" class="btn mep-btn-primary btn-lg">
                                Iniciar sesión
                            </button>
                        </div>

                        <!-- Links secundarios -->
                        <div class="mb-2 text-center">
                            <a id="forgot-password" asp-page="./ForgotPassword">¿Olvidaste tu contraseña?</a>
                        </div>
                        <div class="text-center mep-footer-text">
                            ¿No tienes una cuenta?
                            <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Regístrate aquí</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </main>

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <partial name="_ValidationScriptsPartial" />
</body>
</html>
