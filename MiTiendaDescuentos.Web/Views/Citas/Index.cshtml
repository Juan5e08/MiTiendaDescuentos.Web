@model IEnumerable<MiTiendaDescuentos.Web.Models.Cita>

<div class="container mt-4">
    <div class="card shadow-sm">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h2 class="mb-0">Citas agendadas</h2>
            <a asp-action="Create" class="btn btn-primary btn-sm">
                + Nueva cita
            </a>
        </div>

        <div class="card-body">
            @if (!Model.Any())
            {
                <p class="text-muted mb-0">
                    No hay citas registradas aún.
                </p>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-striped table-hover align-middle mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>@Html.DisplayNameFor(model => model.FechaCita)</th>
                                <th>@Html.DisplayNameFor(model => model.HoraCita)</th>
                                <th>@Html.DisplayNameFor(model => model.NombreAgenda)</th>
                                <th>@Html.DisplayNameFor(model => model.CorreoAgenda)</th>
                                <th>@Html.DisplayNameFor(model => model.TelefonoAgenda)</th>
                                <th>@Html.DisplayNameFor(model => model.CantidadCitas)</th>
                                <th>@Html.DisplayNameFor(model => model.IdColegio)</th>
                                <th>@Html.DisplayNameFor(model => model.IdSede)</th>
                                <th>@Html.DisplayNameFor(model => model.Estado)</th>
                                <th class="text-end">Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@Html.DisplayFor(m => item.FechaCita)</td>
                                    <td>@Html.DisplayFor(m => item.HoraCita)</td>
                                    <td>@Html.DisplayFor(m => item.NombreAgenda)</td>
                                    <td>@Html.DisplayFor(m => item.CorreoAgenda)</td>
                                    <td>@Html.DisplayFor(m => item.TelefonoAgenda)</td>
                                    <td>@Html.DisplayFor(m => item.CantidadCitas)</td>
                                    <td>@Html.DisplayFor(m => item.IdColegio)</td>
                                    <td>@Html.DisplayFor(m => item.IdSede)</td>
                                    <td>@Html.DisplayFor(m => item.Estado)</td>

                                    <td class="text-end">
                                        <a asp-action="Edit"
                                           asp-route-id="@item.IdCita"
                                           class="btn btn-sm btn-outline-secondary me-1">
                                            Editar
                                        </a>

                                        <a asp-action="Details"
                                           asp-route-id="@item.IdCita"
                                           class="btn btn-sm btn-outline-info me-1">
                                            Detalles
                                        </a>

                                        <a asp-action="Delete"
                                           asp-route-id="@item.IdCita"
                                           class="btn btn-sm btn-outline-danger">
                                            Eliminar
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</div>
