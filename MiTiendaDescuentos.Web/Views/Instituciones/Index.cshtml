@model IEnumerable<MiTiendaDescuentos.Web.Models.Institucion>

<div class="container mt-4">
    <div class="card shadow-sm">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h2 class="mb-0">Instituciones</h2>
            <a asp-action="Create" class="btn btn-primary btn-sm">
                + Nueva institución
            </a>
        </div>

        <div class="card-body">
            @if (!Model.Any())
            {
                <p class="text-muted mb-0">
                    No hay instituciones registradas aún.
                </p>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-striped table-hover align-middle mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>@Html.DisplayNameFor(model => model.Nombre)</th>
                                <th>@Html.DisplayNameFor(model => model.Localidad)</th>
                                <th>@Html.DisplayNameFor(model => model.DireccionPrincipal)</th>
                                <th>@Html.DisplayNameFor(model => model.Correo)</th>
                                <th>@Html.DisplayNameFor(model => model.Telefono)</th>
                                <th>@Html.DisplayNameFor(model => model.CantidadSedes)</th>
                                <th class="text-end">Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@Html.DisplayFor(modelItem => item.Nombre)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Localidad)</td>
                                    <td>@Html.DisplayFor(modelItem => item.DireccionPrincipal)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Correo)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Telefono)</td>
                                    <td>@Html.DisplayFor(modelItem => item.CantidadSedes)</td>
                                    <td class="text-end">
                                        <a asp-action="Edit"
                                           asp-route-id="@item.IdColegio"
                                           class="btn btn-sm btn-outline-secondary me-1">
                                            Editar
                                        </a>
                                        <a asp-action="Details"
                                           asp-route-id="@item.IdColegio"
                                           class="btn btn-sm btn-outline-info me-1">
                                            Detalles
                                        </a>
                                        <a asp-action="Delete"
                                           asp-route-id="@item.IdColegio"
                                           class="btn btn-sm btn-outline-danger">
                                            Eliminar
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</div>
