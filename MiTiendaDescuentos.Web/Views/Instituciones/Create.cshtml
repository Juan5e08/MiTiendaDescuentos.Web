@model MiTiendaDescuentos.Web.Models.Institucion

@{
    ViewData["Title"] = "Crear institución";
}

<h1 class="mb-3">Crear nueva institución</h1>

<form asp-action="Create" method="post">
    <div class="card p-4">

        <!-- Resumen de validación -->
        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

        <div class="mb-3">
            <label asp-for="IdColegio" class="form-label"></label>
            <input asp-for="IdColegio" class="form-control" />
            <span asp-validation-for="IdColegio" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Nombre" class="form-label"></label>
            <input asp-for="Nombre" class="form-control" />
            <span asp-validation-for="Nombre" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Localidad" class="form-label"></label>
            <input asp-for="Localidad" class="form-control" />
            <span asp-validation-for="Localidad" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="DireccionPrincipal" class="form-label"></label>
            <input asp-for="DireccionPrincipal" class="form-control" />
            <span asp-validation-for="DireccionPrincipal" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Correo" class="form-label"></label>
            <input asp-for="Correo" class="form-control" />
            <span asp-validation-for="Correo" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Telefono" class="form-label"></label>
            <input asp-for="Telefono" class="form-control" />
            <span asp-validation-for="Telefono" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="CantidadSedes" class="form-label"></label>
            <input asp-for="CantidadSedes" class="form-control" />
            <span asp-validation-for="CantidadSedes" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">Guardar</button>
        <a asp-action="Index" class="btn btn-secondary ms-2">Cancelar</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
